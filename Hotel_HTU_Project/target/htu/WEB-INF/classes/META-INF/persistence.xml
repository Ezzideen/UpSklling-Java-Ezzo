<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	
	<persistence-unit name="Test_PU">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>entity.ERoom</class>
		<class>entity.EHotel</class>
		<class>entity.ERoomType</class>
		<class>entity.ECity</class>
		<class>entity.ECompany</class>
		<class>entity.ECountry</class>
		<class>entity.EGuest</class>
		<class>entity.EReservation</class>
		<class>entity.ECategory</class>
		<class>entity.EUser</class>

		<properties>
			<property name="hibernate.connection.url"
				value="jdbc:mysql://localhost:3306/my_hotel_system" />
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.connection.password"
				value="123456" />
			<property name="hibernate.connection.driver_class"
				value="com.mysql.jdbc.Driver" />

		</properties>
	</persistence-unit>


</persistence>
